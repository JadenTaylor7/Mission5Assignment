@{
    ViewData["Title"] = "Calculate";
}

<h2>Calculate Tutoring Charges</h2>

<div class="calculator-box">
    <div class="form-group">
        <label for="hours">Enter the number of hours:</label>
        <input type="number" id="hours" min="1" required>
    </div>
    <div class="form-group">
        <label for="rate">Rate per hour:</label>
        <input type="text" id="rate" value="11" readonly>
    </div>
    <div class="form-group">
        <button id="calculate">Calculate Total</button>
    </div>
    <div class="form-group">
        <label for="total">Total Charge $:</label>
        <input type="text" id="total" readonly>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js"></script>
